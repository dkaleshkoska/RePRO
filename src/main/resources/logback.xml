<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- <withJansi>true</withJansi> -->
    <encoder>
      <pattern>%highlight(%-7([%level])) %highlight(%d{HH:mm:ss.SSS}) %highlight([%thread]) %cyan(%logger{36}) - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="trace">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>